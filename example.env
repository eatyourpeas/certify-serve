# Example environment variables for certify-serve
# Copy this file to .env and fill in real values (do NOT commit .env)

# SMTP configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=supersecretapikey

# Default email sender
FROM_NAME="Conference Team"
FROM_EMAIL=noreply@example.com

EVENTBRITE_TOKEN=your_eventbrite_api_token_here

# Rate limiting (requests per period)
# RATE_LIMIT: number of requests allowed per client IP
# RATE_PERIOD: period in seconds for the rate limit window
RATE_LIMIT=60
RATE_PERIOD=60

# CORS: comma-separated allowed origins (use '*' to allow all)
ALLOWED_ORIGINS=*

# Maximum request body size in bytes (useful to limit uploads). Default 10MB.
MAX_BODY_SIZE=10485760

# Enforce HTTPS in production (set to true). When enabled the app will redirect
# HTTP requests to HTTPS and include HSTS headers.
ENFORCE_HTTPS=false
# HSTS max-age (seconds)
HSTS_MAX_AGE=31536000
